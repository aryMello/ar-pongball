{
  "name": "ar-pongball-server",
  "version": "1.0.0",
  "description": "AR PongBall multiplayer server with WebRTC signaling",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "npm run build:client",
    "build:client": "webpack --mode=production",
    "deploy": "npm run build && npm start",
    "lint": "eslint *.js",
    "format": "prettier --write *.js"
  },
  "keywords": [
    "ar",
    "augmented-reality",
    "pong",
    "multiplayer",
    "webrtc",
    "game",
    "three.js"
  ],
  "author": "AR PongBall Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "eslint": "^8.46.0",
    "prettier": "^3.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aryMello/ar-pongball.git"
  },
  "bugs": {
    "url": "https://github.com/aryMello/ar-pongball/issues"
  },
  "homepage": "https://github.com/aryMello/ar-pongball#readme",
  "peerDependencies": {
    "three": "^0.155.0"
  },
  "optionalDependencies": {
    "redis": "^4.6.7",
    "mongodb": "^5.7.0",
    "postgresql": "^3.4.3"
  },
  "config": {
    "port": 3000,
    "maxRooms": 1000,
    "roomTimeout": 1800000,
    "playerTimeout": 300000
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  }
}